{
  "name": "ts-pack",
  "version": "0.0.7",
  "description": "A simple typescript packer that merges imports into a single file. Without all of the complexity",
  "main": "lib/index.js",
  "bin": {
    "tspack": "bin/tspack"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nullcatalyst/ts-pack.git"
  },
  "scripts": {
    "start": "bin/tspack",
    "test": "mocha",
    "build": "npm run clean && npm run bootstrap && npm run compress",
    "clean": "rm -rf lib index.js",
    "bootstrap": "tsc -p . && cp src/helpers.js lib/. && bin/tspack -p . src/main.ts -o index.js",
    "compress": "uglifyjs --compress --mangle --wrap=tsPack -o index.js -- index.js"
  },
  "author": "Scott Bennett <scottbennett912@gmail.com>",
  "license": "ISC",
  "files": [
    "bin",
    "lib"
  ],
  "dependencies": {
    "bluebird": "^3.4.7",
    "builtin-modules": "^1.1.1",
    "lodash": "^4.17.3",
    "magic-string": "^0.19.0",
    "node-getopt": "^0.2.3",
    "source-map": "^0.5.6",
    "typescript": "^2.1.4"
  },
  "devDependencies": {
    "@types/bluebird": "^3.0.37",
    "@types/lodash": "^4.14.45",
    "@types/mocha": "^2.2.35",
    "@types/node": "^6.0.54",
    "@types/source-map": "^0.5.0",
    "mocha": "^3.2.0",
    "uglify-js": "^2.7.5"
  }
}
